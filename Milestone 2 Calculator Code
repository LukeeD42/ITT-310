#include<stdio.h> // need to include stdio.h library

int main(void)
{       
    int a, b, result;
    char op; // to store the operator
    
    printf("Based on the input, ");
    scanf("%d%c%d", &a, &op, &b);

    switch(op)      // used to pick between +, -, *, and /.
    {
        case '+':
            result = a + b;
            break;
        case '-':
            result = a - b;
            break;
        case '*':
            result = a * b;
            break;
        case '/':
            result = a / b;
            break;              
    }
    
    printf("Result = %d", result);
    
    return 0; // return 0 to operating system
}
